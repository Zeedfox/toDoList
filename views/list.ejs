<%- include("header"); -%>
  <!--
    <% if(listTitle === "Saturday" || listTitle === "Sunday"){ %>
      <h1 style="color: purple"><%= listTitle %> To Do List</h1>
    <% }else{ %>
      <h1 style="color: blue"><%= listTitle %> To Do List</h1>
    <% } %>
    -->

  <div class="box" id="heading">
    <h1><%= listTitle %> </h1>
  </div>

  <div class="box">

    <%for(var i = 0; i < newItem.length; i++){%>
    <%var printItem = newItem[i];%>
    <div class="item">
      <input type="checkbox">
      <p><%= printItem %></p>
    </div>
    <%}%>

    <form class="item" action="/" method="post">
      <input type="text" name="activity" placeholder="New Item" autocomplete="off">
      <button type="submit" name="list" value= <%= listTitle %> >+</button>
    </form>

    </div>

<%- include("footer"); -%>
